@model IEnumerable<StrygevaleDatabase.Models.Subject>

@{
    ViewBag.Title = "Предметы";
}

<h2>Предметы</h2>

<p>
    @Html.ActionLink("Создать новый", "Create")
</p>
@using (Html.BeginForm("Search", "Subjects", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <input type="text" name="search" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Поиск" class="btn btn-default" />
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Название предмета")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.ActionLink(item.subject_name, "Details", new { id = item.id_subject })
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.id_subject }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.id_subject })
            </td>
        </tr>
    }

</table>
