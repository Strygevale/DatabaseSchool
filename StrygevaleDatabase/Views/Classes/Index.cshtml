@model IEnumerable<StrygevaleDatabase.Models.Class>

@{
    ViewBag.Title = "Класс";
}

<h2>Класс</h2>

<p>
    @Html.ActionLink("Создать новый", "Создать")
</p>
@using (Html.BeginForm("Search", "Classes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <input type="text" name="search" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Поиск" class="btn btn-default" />
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Название класса")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.class_name, "Details", new { id = item.id_class })
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.id_class }) |
            
                @Html.ActionLink("Удалить", "Delete", new { id = item.id_class })
            </td>
        </tr>
    }

</table>
