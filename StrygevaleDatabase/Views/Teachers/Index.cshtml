@model IEnumerable<StrygevaleDatabase.Models.Teacher>

@{
    ViewBag.Title = "Учителя";
}

<h2>Учителя</h2>

<p>
    @Html.ActionLink("Создать новый", "Create")
</p>
@using (Html.BeginForm("Search", "Teachers", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <input type="text" name="search" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Поиск" class="btn btn-default" />
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("ФИО")
        </th>
        <th>
            @Html.DisplayName("Специальность")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.ActionLink(item.fio, "Details", new { id = item.id_teacher })
        </td>
        <td>
            @Html.ActionLink(item.specialty, "Details", new { id = item.id_teacher})
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.id_teacher }) |

            @Html.ActionLink("Удалить", "Delete", new { id = item.id_teacher })
        </td>
    </tr>
    }

</table>
